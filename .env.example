OPENAI_API_KEY="sk-proj-..."
TAVILY_API_KEY='tvly-..."

# NL to GraphQL Enterprise Solution Configuration
# Database Configuration
DATABASE_URL=sqlite:///./nl-to-graphql-enterprise-solution/watches_enterprise.db

# LLM Configuration for NL to GraphQL
# Choose either OpenAI or Anthropic
LLM_PROVIDER=openai  # or "anthropic"
LLM_MODEL=gpt-4  # or gpt-3.5-turbo, gpt-4-turbo

# Anthropic Configuration (alternative to OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# LLM_MODEL=claude-3-sonnet-20240229  # or claude-3-opus-20240229

# Application Configuration
DEBUG=False

# ============================================================================
# MCP Natural Language to Data Endpoints Configuration
# ============================================================================

# LLM Configuration for MCP Server
MCP_LLM_PROVIDER=openai  # or "anthropic"
MCP_LLM_MODEL=gpt-4  # or gpt-3.5-turbo, gpt-4-turbo, claude-3-sonnet-20240229

# Reuse existing API keys
# OPENAI_API_KEY (already defined above)
# ANTHROPIC_API_KEY (already defined above)

# --- SQL Database Connections ---

# MySQL (Local or Remote)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=your_database

# PostgreSQL (Local or Remote)
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=your_password
POSTGRESQL_DATABASE=your_database

# Oracle Database (Local or Remote)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_USER=your_user
ORACLE_PASSWORD=your_password
ORACLE_SERVICE=your_service_name

# MS-SQL Server (Local or Remote)
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASSWORD=your_password
MSSQL_DATABASE=your_database

# Snowflake
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=your_warehouse

# Databricks
DATABRICKS_HOST=your_workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your_warehouse_id
DATABRICKS_TOKEN=your_access_token

# --- NoSQL Database Connections ---

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=your_database

# Apache Cassandra
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=your_keyspace

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_password
REDIS_DB=0

# AWS DynamoDB (uses AWS credentials)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# --- Graph Database Connections ---

# Neo4j (Local or Remote)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# ArangoDB
ARANGODB_HOST=http://localhost:8529
ARANGODB_USER=root
ARANGODB_PASSWORD=your_password
ARANGODB_DATABASE=_system

# GraphDB (RDF/SPARQL)
GRAPHDB_ENDPOINT=http://localhost:7200/repositories/
GRAPHDB_REPOSITORY=your_repository

# Amazon Neptune (Gremlin)
NEPTUNE_ENDPOINT=your-cluster.cluster-xxx.region.neptune.amazonaws.com
NEPTUNE_PORT=8182

# Azure CosmosDB (Gremlin API)
COSMOSDB_ENDPOINT=your-account.gremlin.cosmos.azure.com
COSMOSDB_KEY=your_primary_key
COSMOSDB_DATABASE=your_database
COSMOSDB_COLLECTION=your_collection

# --- GraphQL API Connections ---

# Generic GraphQL API
GRAPHQL_API_TOKEN=your_api_token

# Saleor API
SALEOR_API_TOKEN=your_saleor_token

# Custom Headers (JSON format)
GRAPHQL_CUSTOM_HEADERS={"X-Custom-Header": "value"}